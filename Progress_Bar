package display;

import java.awt.Button;
import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.util.logging.Level;
import java.util.logging.Logger;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JProgressBar;

public class Main extends JFrame{
    private JProgressBar bar;
    JLabel lab;
    Button bot;
    public void rep(){
         for (int i = 0; i <= 100; i++) {
            try {
                Thread.sleep(50);
                bar.setValue(i);
                if(i==100){
                    lab.setForeground(Color.blue);
                    lab.setFont(new Font("Tahoma", 2, 18));
                    lab.setBounds(65, 127, 200, 34);
                    lab.setText("Proceso completado");
                    Thread.sleep(1000);
                    bot.setVisible(true);
                }else{
                    lab.setText(Integer.toString(i));
                }
            } catch (InterruptedException ex) {
                Logger.getLogger(Main.class.getName()).log(Level.SEVERE, null, ex);
            }
        }   
    }
    public Main(){
        FlowLayout flow = new FlowLayout(FlowLayout.CENTER,10,16);
        setLayout(null);
        setLocationRelativeTo(null);
        setUndecorated(true);
        getContentPane().setBackground(Color.green);
        setSize(300, 220);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        bar = new JProgressBar();
         lab = new JLabel(); 
         lab.setBounds(150, 127, 50, 30);
         bar.setBackground(Color.green);
         bar.setBounds(79, 89, 140, 30);
        add(bar);
        bot = new Button("Continue");
        bot.setVisible(false);
        bot.addActionListener(new java.awt.event.ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                setVisible(false);
                Inicio_APP in = new Inicio_APP();
                in.setVisible(true);
                dispose();
            }
        });
        add(lab);
        bot.setBounds(120, 160, 90, 30);
        add(bot);
    }
    public static void main(String[] args) {
        Main ma = new Main();
        ma.setVisible(true);
        ma.rep();
    }
}



